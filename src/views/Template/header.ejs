</svg></a>
        </li>
      <li>
        <div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
    ${info.user}</button>
    <ul class="dropdown-menu">
        <li class="dropdown-item">phone: ${info.phone}</li>
        <li class="dropdown-item">mail: ${info.email} </li>
        <li class="dropdown-item">state: ${info.state}</li>
        <li><hr class="dropdown-divider"></li>
        <li><a class="dropdown-item" href="/user/account">Account</a></li>
        <li><a class="dropdown-item" href="/user/logOut">logOut</a></li>
        <li><a class="dropdown-item" href="#">update account</a></li>
        <li><a class="dropdown-item" href="#">delete account</a></li>
      </ul>
    </div>
  </li>
    </ul>`
  }

function getMsg(msg){
  return `<li class="list-group-item list-group-item-primary"> ${msg} </li>`
}

function getErr(err){
  return `<li class="list-group-item list-group-item-danger"> ${err} </li>`
}

$(function(){
  $.getJSON("/getUser", (data)=>{
    if(data.flag){
       $('#UserAcc').html(getUserLogIn(data.info))
    }else{
       $('#UserAcc').html(getLogInHtml())
    }
  })

  $.getJSON("/getmsg",(data)=>{
    if(data.msg){
      data.msg.forEach((m) => {
        $('#msg').append(getMsg(m));
      });
    }
    if(data.err){
      data.err.forEach((e) => {
      $('#msg').append(getErr(e));
      });
    }
    $('#msg').delay(2000).fadeOut(1000)
  })

})

</script>
