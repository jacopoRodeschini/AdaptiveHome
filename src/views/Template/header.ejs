    return `<a href="/signin"role="button" class="btn btn-outline-light me-2">Login</a>
    <a href="/signup"role="button" class="btn btn-primary">Sign-up</a>`  }

function getUserLogIn(info){
    return `<ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
    <li><a href="/user/settings" class="nav-link px-2 text-white">
      <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-gear" viewBox="0 0 16 16">
